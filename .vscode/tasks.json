{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "lint",
      "problemMatcher": [
        "$deno-lint"
      ],
      "group": "test",
      "label": "deno: lint"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "check"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: check",
      "detail": "$ deno check scripts/*.ts *.ts src/*.ts"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "build"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: build",
      "detail": "$ deno task build"
    },
    {
      "type": "deno",
      "command": "test",
      "args": [
        "--allow-net"
      ],
      "problemMatcher": [
        "$deno-test"
      ],
      "group": "test",
      "label": "deno: test"
    }
  ]
}
